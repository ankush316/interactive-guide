{
    "title": "Download Aadhaar | Download Aadhar",
    "selectorAttribute": "data-testid",
    "steps": [
        
        {
            "type": "click",
            "target": "main",
            "label": "Click here to download Aadhaar",
            "selectors": [
                [
                    "div[role='button'][aria-label='Download Aadhaar']"
                  ]
            ]  
        },
        
        {
            "type": "click",
            "target": "main",
            "label": "Choose an option to proceed",
            "selectors": [   
               [
                    ".auth-form__radio-group"
                ]    
            ]
        },
        
        {
            "type": "input",
            "target": "main",
            "label": "Enter your Aadhaar number",
            "selectors": [
               [
                    ".auth-form__text-field input"
                ]       
            ] 
        },
        
         {
            "type": "input",
            "target": "main",
            "label": "Enter the Captcha",
            "selectors": [  
              [
                    ".pvc-form__captcha-field-container input"
                ]       
           ]       
        },
        {
            "type": "click",
            "target": "main",
            "label": "Click here to send OTP",
            "selectors": [
                [
                   ".auth-form__button-container"
                ]               
            ]    
        },
        {
            "type": "click",
            "target": "main",
            "label": "Confirm download option",
            "selectors": [
                [
                    ".auth-form__checkbox"
                ]               
            ]  
        },
        {
            "type": "input",
            "target": "main",
            "label": "Enter the OTP received on your registered mobile number",
            "selectors": [
                [
                    "div.MX_20 input"
                ]       
            ]
        },
        {
            "type": "click",
            "target": "main",
            "label": "Click here to verify OTP",
            "selectors": [
                [
                    "div.unauth-eaadhaar-download > div > div > div:nth-of-type(1) div:nth-of-type(6)"
                ]     
            ]
        } 
    ]
}