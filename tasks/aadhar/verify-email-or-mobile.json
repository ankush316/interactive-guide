        {
            "type": "click",
            "target": "main",
            "label": "Select email or mobile to proceed",
            "selectors": [   
               [
                    "div.pvc-form__radio-group"
                ]    
            ]
        },
        
        {
            "type": "input",
            "target": "main",
            "label": "Enter your Aadhaar number",
            "selectors": [
               [
                    ".auth-form__text-field input"
                ]       
            ] 
        },
        
         {
            "type": "input",
            "target": "main",
            "label": "Enter your Aadhaar number",
            "selectors": [  
                [
                    "div.pvc-form__form-container > div:nth-of-type(1) input"
                ]       
           ]       
        },
        {
            "type": "input",
            "target": "main",
            "label": "Enter mobile number or email to send OTP",
            "selectors": [
                [
                   "div.pvc-form__form-container > div:nth-of-type(2) input"
