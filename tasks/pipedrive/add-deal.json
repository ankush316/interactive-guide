            "label": "Click here to go to deals page",
            "selectors": [
                
                [
                   "a[aria-label='Deals']"
                ]
            ]
            
        },
         
        {
            "type": "click",
            "target": "main",
            "allowNavigation": true,
            "label": "Click here to add a new deal",
            "selectors": [
                
                [
                    "div.cui5-toolbar__view-actions button.cui5-button-group-item--first-child"
                ]
            ]
        },
        {
            "type": "click",
            "label": "Fill this form to add new deal",
            "selectors": [
                [
                     "[data-test='compound-modal'] header"
                ]
            ],
            "target": "main"
        }
    ]
