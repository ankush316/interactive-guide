                [
                     "#root button"
                ]       
            ]
        },
        {
            "type": "input",
            "target": "main",
            "label": "Enter the Verification code received on your registered mobile number / email",
            "selectors": [
                [
                    "div:nth-of-type(5) input"
                ]       
            ]
        },
       
        {
            "type": "click",
            "target": "main",
